<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>User Directory</title>
    <link rel="stylesheet" href="/css/index.css">
  </head>
  <body>
    <div class="index">
      <h3>Index</h3>
      {{#users}}
      <div class="user-index">
        <a href="#{{username}}"><img src={{avatar}} alt=""></a>
        <a href="#{{username}}"><h3>{{name}}</h3></a>
        {{#job}}
        <p>{{job}}, {{company}}</p>
        {{/job}}
        {{^job}}
        <p style = "color: red">Available for hire</p>
        {{/job}}
      </div>
      {{/users}}
    </div>
    {{#users}}
    <div class="user-card" id={{username}}>
      <div class="user-image">
        <img src={{avatar}} alt="">
      </div>
      <div class="user-info">
        <h1>{{name}}</h1>
        <p>
          {{#address}}
          {{city}}, {{country}}
          {{/address}}
          |
          {{#job}}
          {{job}}, {{company}}
          {{/job}}
          {{^job}}
          <span style = "color: red">Available for hire</span>
          {{/job}}
        </p>
        <p>{{email}} | {{phone}}</p>
      </div>
      <div class="addition-info">
        <table>
          {{#university}}
          <tr>
            <td><b>Education</b></td>
            <td>{{university}}</td>
          </tr>
          {{/university}}
          <tr>
            <td><b>Skills</b></td>
            <td><ul>
              {{#skills}}<li>{{.}}</li>{{/skills}}
            </ul></td>
          </tr>
        </table>
      </div>
    </div>
    {{/users}}

    <script src="/javascript/main.js" charset="utf-8"></script>
  </body>
</html>
